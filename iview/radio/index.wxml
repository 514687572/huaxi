<view class="i-class i-radio" catchtap="radioChange">
    <i-cell i-class="i-radio-cell">
        <label>
            <radio value="{{value}}" checked="{{checked}}" color="#157FF0" disabled="{{disabled}}" class="i-radio-radio {{positionCls}}" />
            <view class="i-radio-title">{{value}}</view>
        </label>
    </i-cell>
</view>
