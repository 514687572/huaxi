/* pages/shops/index/Searchs/index.wxss */
.search{
  padding: 30rpx 10rpx;
 background-color: #3c79F7;
}
.sercon{
  display: flex;
  justify-content:flex-start;
  align-items: center;
  width: 600rpx;
  height: 60rpx;
  margin: 0 auto;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #999;
  border-radius: 30rpx;
  text-align: center;
  border: 1px solid rgba(187, 187, 187, 1);
  background-color: #fff;
}
.sercon input{
  width: 500rpx;
  text-align: left;
}
.slide-image{
  display: block;
  width: 100%;
}
.icons{
  height: 32rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
}
.lists{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 2vw;
  box-sizing: border-box;
}
.lists .listitem{
  width: 47vw;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.lists .listitem view{
 
}
.lists .listitem image{
  display: block;
  width: 47vw;
  height: 47vw;
}
.lists .tit{
  font-size: 32rpx;
  line-height: 40rpx;
  height: 80rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.lists .dec{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.lists .pri{
  font-size: 28rpx;
  color: #E51C23;
}
.listconts{
  padding: 10rpx 20rpx;
}
