/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.icons{
  height: 32rpx;
  margin-right: 20rpx;
}
.usermotto {
  margin-top: 200px;
}
.search{
  padding: 15rpx 10rpx 30rpx 10rpx;
  background-color: #3c79F7;
}
.sercon{
  display: flex;
  justify-content:center;
  align-items: center;
  width: 600rpx;
  height: 60rpx;
  margin: 0 auto;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #999;
  border-radius: 30rpx;
  text-align: center;
  border: 1px solid rgba(187, 187, 187, 1);
  background-color: #fff;
}
.slide-image{
  display: block;
  width: 100%;
}
.menus{
  padding-bottom: 20rpx;
  padding:0 20rpx 20rpx 20rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}
.mensitem{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.menulist{
  width: 22%;
  /* height: 80rpx; */
  margin: 20rpx 1% 0 1%;
  /* background-color: #999; */
  text-align: center;
  font-size: 28rpx;
}
.swheig{
  height: 350rpx;
  overflow: hidden;
}
.bestgoods{
  font-size: 30rpx;
  color: #E51C23;
  margin-top: 20rpx;
  margin-bottom: 26rpx;
  text-align: center;
  font-weight: 600;
}
.in-icon{
  display: block;
  margin: 0 auto;
  width: 80rpx;
  height: 80rpx;
}
.lists{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  /* margin-top: 20rpx; */
  margin-bottom: 20rpx;
  padding: 0 2vw;
  box-sizing: border-box;
}
.lists .listitem{
  width: 47vw;
  overflow: hidden;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #fff;
}
.lists .listitem view{

}
.lists .listitem image{
  display: block;
  width: 47vw;
  height: 47vw;
}
.lists .tit{
  font-size: 32rpx;
  line-height: 40rpx;
  height: 80rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.lists .dec{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.lists .pri{
  font-size: 28rpx;
  color: #E51C23;
}
.listconts{
  padding: 10rpx 20rpx;
}

.lotc{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, .7);
  z-index: 99999;
}
.lohide{
  display: none;
}
.lotcs{
  padding:40rpx 0 0 0;
  background-color: #fff;
}
.lotctext{
  padding: 0 60rpx 40rpx 60rpx;
}
.lotcsbtn{
  display: block;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  background-color: #fff;
  line-height: 80rpx;
  color: #3c79F7;
  text-align: center;
  border: 0;
  border-top: 1rpx solid #ddd;
  border-radius: 0;
}